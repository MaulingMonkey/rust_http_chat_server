{
    "version":          "2.0.0",
    "problemMatcher":   "$rustc",
    "type":             "shell",
    "presentation":     { "clear": true, "reveal": "always" },
    "tasks": [
        {
            "label":            "check",
            "command":          "cargo c",
            "group":            { "kind": "build", "isDefault": true }
        },
        {
            "label":            "cargo build --package rust_http_chat_server --bin rust_http_chat_server",
            "command":          "cargo build --package rust_http_chat_server --bin rust_http_chat_server",
        },
        {
            "label":            "cargo build --package rust_http_chat_server --bin rust_http_chat_server --release",
            "command":          "cargo build --package rust_http_chat_server --bin rust_http_chat_server --release",
        },
    ]
}
